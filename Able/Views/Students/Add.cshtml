@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelper
@model Able.Models.Students.Student

@{
    ViewData["Title"] = "Add";
}



<h4 class="subtitle is-4">Add student</h4>
<hr />
<div class="column is-two-fifths" style="margin-left:400px">
    <div class="box">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          
            <div class="field">
                <label asp-for="Name" class="control-label"></label>
                <div class="control">
                    <input asp-for="Name" class="input" />
                    <span asp-validation-for="Name" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Surname" class="control-label"></label>
                <div class="control">
                    <input asp-for="Surname" class="input" />
                    <span asp-validation-for="Surname" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Birth" class="control-label"></label>
                <div class="control">
                    <input asp-for="Birth" class="input" />
                    <span asp-validation-for="Birth" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Group" class="control-label"></label>
                <div class="control">
                    <input asp-for="Group" class="input" />
                    <span asp-validation-for="Group" class="has-text-danger"></span>
                </div>
            </div>

         

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" style="position:center">Add</button>
                </div>
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-left:400px">Back to List</a>
</div>